<Window x:Class="Tehtava2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FF47FFEE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Login:" Margin="5"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Password:" Margin="5"/>
            <Button x:Name="btnLogin" Content="Login" Grid.Column="1" Height="30" Margin="5" Grid.Row="2" Width="75" Click="btnLogin_Click"/>
            <TextBox x:Name="txtbLogin" Grid.Column="1" Height="23" Margin="5" Width="120"/>
            <TextBox x:Name="txtbPassword" Grid.Column="1" Grid.Row="1" Height="23" Margin="5" Width="120"/>
    </Grid>
    </Grid>
</Window>
